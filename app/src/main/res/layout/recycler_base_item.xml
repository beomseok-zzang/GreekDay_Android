<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:elevation="0dp"
    card_view:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageView
                android:id="@+id/iv_base_main"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="32dp"
                android:layout_weight="1"
                android:transitionName="asp"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                app:srcCompat="@mipmap/sample_1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp">

                <TextView
                    android:id="@+id/tv_base_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sample" />

                <TextView
                    android:id="@+id/tv_base_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5,000원" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/relative_base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="vertical"
            android:padding="8dp">


            <CheckedTextView
                android:id="@+id/tv_base_add_yogurt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/circular_button"
                android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                android:checkMarkTint="@color/colorAccent"
                android:checked="true"
                android:clickable="true"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:text="요거트 추가"
                android:textSize="16dp" />

            <CheckedTextView
                android:id="@+id/tv_base_honney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/circular_button"
                android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                android:checkMarkTint="@color/colorAccent"
                android:checked="true"
                android:clickable="true"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="꿀 추가"
                android:textSize="16dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/circular_button"
                android:gravity="center_vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_add_topping"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="토핑 추가"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_chevron_right_black_24dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:weightSum="8">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_base_addcart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:backgroundTint="@color/colorAccent"
                    android:text="담기"
                    android:textColor="@color/colorWhite" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_base_buy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:backgroundTint="@color/colorAccent"
                    android:text="바로구매"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>